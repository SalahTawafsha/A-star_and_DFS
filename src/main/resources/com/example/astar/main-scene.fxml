<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="800.0" prefWidth="1500.0" spacing="20.0" style="-fx-background-color: skyblue;" stylesheets="@tableView.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.astar.MainController">
   <BorderPane prefHeight="800.0" prefWidth="373.0">
      <bottom>
           <Label fx:id="time" alignment="CENTER" prefHeight="18.0" prefWidth="463.0" text="time in ms: 50" BorderPane.alignment="CENTER" />
      </bottom>
      <center>
         <Pane fx:id="pane" prefHeight="695.0" prefWidth="374.0" BorderPane.alignment="CENTER">
            <children>
               <ImageView fitHeight="639.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@map.jpg" />
                  </image>
               </ImageView>
               <Pane fx:id="lines" layoutY="-2.0" prefHeight="639.0" prefWidth="371.0" />
            </children>
            <BorderPane.margin>
               <Insets top="100.0" />
            </BorderPane.margin>
         </Pane>
      </center>
   </BorderPane>
    <VBox alignment="CENTER" layoutX="128.0" layoutY="83.0" prefHeight="324.0" prefWidth="318.0">
        <GridPane alignment="CENTER" prefHeight="315.0" prefWidth="318.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <ComboBox fx:id="sourceBox" prefWidth="150.0" style="-fx-background-radius: 50;" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="20.0" />
                </GridPane.margin>
            </ComboBox>
            <ComboBox fx:id="destinationBox" onAction="#find" prefWidth="150.0" style="-fx-background-radius: 50;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="20.0" />
                </GridPane.margin>
            </ComboBox>
            <Label text="Source:">
                <GridPane.margin>
                    <Insets right="20.0" />
                </GridPane.margin>
            </Label>
            <Label text="Destination:" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets right="20.0" />
                </GridPane.margin>
            </Label>
         <Label layoutX="86.0" layoutY="89.0" text="Path:" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="20.0" />
            </GridPane.margin>
         </Label>
         <TextArea fx:id="path" prefHeight="78.0" prefWidth="159.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="279.0" spacing="20.0">
            <RadioButton fx:id="aStar" mnemonicParsing="false" selected="true" text="A*">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </RadioButton>
            <RadioButton fx:id="bfs" mnemonicParsing="false" text="BFS" />
        </HBox>
        <Button mnemonicParsing="false" onAction="#find" prefHeight="47.0" prefWidth="104.0" style="-fx-background-radius: 50;" text="Find" />
    </VBox>

</HBox>
