<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="700.0" prefWidth="1500.0" spacing="20.0" style="-fx-background-color: skyblue;" stylesheets="@tableView.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.astar.MainController">

    <VBox alignment="CENTER" prefHeight="632.0" prefWidth="815.0" spacing="30.0">
        <TableView fx:id="tableView" prefHeight="384.0" prefWidth="815.0">
            <columns>
                <TableColumn fx:id="sourceCol" editable="false" prefWidth="271.0" sortable="false" style="-fx-alignment: center" text="Current Source" />
                <TableColumn fx:id="destinationCol" editable="false" minWidth="0.0" prefWidth="271.0" sortable="false" style="-fx-alignment: center" text="Next Destination" />
                <TableColumn fx:id="costCol" editable="false" prefWidth="271.0" sortable="false" style="-fx-alignment: center" text="Cost" />
            </columns>
        </TableView>
        <Label fx:id="time" alignment="CENTER" prefHeight="18.0" prefWidth="463.0" text="time in ms: 50" />
    </VBox>
    <VBox alignment="CENTER" layoutX="128.0" layoutY="83.0" prefHeight="324.0" prefWidth="318.0">
        <GridPane alignment="CENTER" prefHeight="178.0" prefWidth="296.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <ComboBox fx:id="sourceBox" prefWidth="150.0" style="-fx-background-radius: 50;" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="20.0" />
                </GridPane.margin>
            </ComboBox>
            <ComboBox fx:id="destinationBox" prefWidth="150.0" style="-fx-background-radius: 50;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="20.0" />
                </GridPane.margin>
            </ComboBox>
            <Label text="Source:">
                <GridPane.margin>
                    <Insets right="20.0" />
                </GridPane.margin>
            </Label>
            <Label text="Destination:" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets right="20.0" />
                </GridPane.margin>
            </Label>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="279.0" spacing="20.0">
            <RadioButton fx:id="aStar" mnemonicParsing="false" selected="true" text="A*">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </RadioButton>
            <RadioButton fx:id="bfs" mnemonicParsing="false" text="BFS" />
        </HBox>
        <Button mnemonicParsing="false" onAction="#find" prefHeight="47.0" prefWidth="104.0" style="-fx-background-radius: 50;" text="Find" />
    </VBox>

</HBox>
